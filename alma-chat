<body>
  <div id="sidebar">
    <h3>Histórico</h3>
    <div id="sessions"></div>
    <button onclick="newSession()">Nova sessão</button>
  </div>
  <div id="chat">
    <div id="messages"></div>
    <div id="inputBar">
      <input id="q" placeholder="Escreve aqui…" onkeydown="if(event.key==='Enter') send()">
      <button onclick="send()">Enviar</button>
    </div>
  </div>

  <script>
    let userId = "session-" + Date.now();
    let sessions = JSON.parse(localStorage.getItem("alma_sessions") || "[]");
    sessions.push(userId);
    localStorage.setItem("alma_sessions", JSON.stringify(sessions));
    renderSessions();

    function renderSessions() {
      let s = document.getElementById("sessions");
      s.innerHTML = "";
      (JSON.parse(localStorage.getItem("alma_sessions")||"[]")).forEach(id=>{
        let div = document.createElement("div");
        div.className = "session";
        div.textContent = id;
        div.onclick = ()=>{ userId=id; };
        s.appendChild(div);
      });
    }

    async function send() {
      let q = document.getElementById("q").value.trim();
      if(!q) return;
      addMsg("user", q);
      document.getElementById("q").value="";
      let res = await fetch("/ask", {
        method:"POST", headers:{"Content-Type":"application/json"},
        body: JSON.stringify({question:q, user_id:userId})
      });
      let j = await res.json();
      addMsg("alma", j.answer || "[erro]");
    }

    function addMsg(role, text) {
      let div = document.createElement("div");
      div.className = "msg " + role;
      div.textContent = text;
      document.getElementById("messages").appendChild(div);
      document.getElementById("messages").scrollTop = 999999;
    }

    function newSession() {
      userId = "session-" + Date.now();
      let sessions = JSON.parse(localStorage.getItem("alma_sessions") || "[]");
      sessions.push(userId);
      localStorage.setItem("alma_sessions", JSON.stringify(sessions));
      renderSessions();
    }
  </script>
</body>
</html>

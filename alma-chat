      color: #eee;
      display: flex;
      height: 100vh;
    }
    #sidebar {
      width: 220px;
      background: #1a1a1a;
      padding: 10px;
      border-right: 2px solid #333;
      display: flex;
      flex-direction: column;
    }
    #sessions {
      flex: 1;
      overflow-y: auto;
    }
    .session {
      padding: 8px;
      margin: 4px 0;
      background: #222;
      border-radius: 4px;
      cursor: pointer;
    }
    .session:hover {
      background: #333;
    }
    #chat {
      flex: 1;
      display: flex;
      flex-direction: column;
    }
    #messages {
      flex: 1;
      padding: 20px;
      overflow-y: auto;
    }
    .msg {
      margin: 8px 0;
      padding: 10px 14px;
      border-radius: 6px;
      max-width: 70%;
      white-space: pre-wrap;
    }
    .user {
      background: #444;
      align-self: flex-end;
    }
    .alma {
      background: #2a2a2a;
      border-left: 4px solid #f2b632; /* amarelo torrado */
      align-self: flex-start;
    }
    #inputBar {
      display: flex;
      border-top: 2px solid #333;
    }
    #q {
      flex: 1;
      padding: 12px;
      border: none;
      background: #222;
      color: #eee;
      font-size: 14px;
    }
    button {
      background: #f2b632;
      border: none;
      padding: 12px 18px;
      cursor: pointer;
      font-weight: bold;
    }
